<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                             http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
  <servlet>
    <servlet-name>AddProductServlet</servlet-name>
    <servlet-class>catalog.controller.AddProductServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AddProductServlet</servlet-name>
    <url-pattern>/addProduct</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>AddCategoryServlet</servlet-name>
    <servlet-class>catalog.controller.AddCategoryServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AddCategoryServlet</servlet-name>
    <url-pattern>/addCategory</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>AddPromotionServlet</servlet-name>
    <servlet-class>catalog.controller.AddPromotionServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AddPromotionServlet</servlet-name>
    <url-pattern>/addPromotion</url-pattern>
  </servlet-mapping>

</web-app>
